{
  "name": "i-u-io",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:js": "esbuild assets/js/*.js --bundle --outdir=static/js",
    "dev:js": "esbuild assets/js/*.js --bundle --outdir=static/js --watch",
    "build": "yarn build:css && yarn build:js && hugo",
    "dev:server": "hugo server -D --watch --disableFastRender",
    "build:css": "tailwindcss -i ./assets/css/style.css -o static/css/style.css",
    "dev": "concurrently \"yarn dev:server\" \"tailwindcss -i ./assets/css/style.css -o static/css/style.css --watch\" \"yarn dev:js\"",
    "build:cf": "if [ \"$CF_PAGES_BRANCH\" == \"main\" ]; then git fetch --unshallow && npm install && hugo -b $BASE_URL --gc --minify --templateMetrics --templateMetricsHints --forceSyncStatic --enableGitInfo; else git fetch --unshallow && npm install && hugo -b $CF_PAGES_URL --gc --minify --templateMetrics --templateMetricsHints --forceSyncStatic --enableGitInfo; fi"
  },
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "daisyui": "^4.12.23",
    "gsap": "^3.12.5",
    "three": "^0.171.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.2",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-go-template": "^0.0.15",
    "tailwindcss": "^3.4.16"
  }
}